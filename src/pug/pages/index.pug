    const partners = '{"regions":{"leningradskaya":{"region":"leningradskaya","regionName":"Ленинградская область","cities":[{"city":"Александров","link":"aleksandrov.html"},{"city":"Владимир","link":"vladimir.html"}]},"vladimirskaya":{"region":"vladimirskaya","regionName":"Владимирская область","cities":[{"city":"Санкт-Петербург","link":"spb.html"},{"city":"Владимир","link":"vladimir.html"}]}}}';