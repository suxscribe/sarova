extends ../layout/main

block variables
  - var title = 'Sarova';
  - var description = 'Description';
  - var pageClass = 'page--products';
  - var mainClass = 'main--content';
  - var scrollSpy = 'cls: uk-animation-slide-bottom-small; delay: 200'

block content
  .content__title-wrap(uk-scrollspy=scrollSpy)
    .content__subtitle(uk-scrollspy="cls: uk-animation-slide-bottom-small; delay: 400") Компания
    .content__menu(uk-scrollspy="cls: uk-animation-slide-bottom-small; delay: 600")
      a(href="company.html").content__menu-item.content__menu-item--active О компании
      a(href="history.html").content__menu-item История
      a(href="acheivements.html").content__menu-item Достижения и награды
      a(href="clients.html").content__menu-item Клиентам
    .content__lead Компания «Минеральная вода и напитки» — признанный лидер на российском рынке воды и безалкогольных напитков, предлагает потребителю полезные и натуральные напитки высочайшего качества.
    a.content__scrolldown.button--scrolldown(href="#content")
      +svg({name: 'arrow-down'})

  .content__container#content(uk-scrollspy="cls: uk-animation-slide-bottom-small; delay: 800")
    .content__slider.company__slider.swiper-container
      ul.swiper-wrapper
        li.content__slider-item.swiper-slide
          img(src="assets/company-slide-01.jpg", alt="")
        li.content__slider-item.swiper-slide
          img(src="assets/company-slide-01.jpg", alt="")
        li.content__slider-item.swiper-slide
          img(src="assets/company-slide-01.jpg", alt="")
        li.content__slider-item.swiper-slide
          img(src="assets/company-slide-01.jpg", alt="")
      .company__slider-nav
        .slider__arrow.slider__arrow--left.company__slider-arrow.company__slider-arrow--left
          +svg({ name: 'slider-arrow-left'})
        .slider__arrow.slider__arrow--right.company__slider-arrow.company__slider-arrow--right
          +svg({ name: 'slider-arrow-right'})
    .content__section
      .content__section-subtitle Ценности компании
      .content__section-title За годы работы компании сложилась система ценностей, которая позволила заслужить безупречную рекомендацию
      .content__lead Мы приносим удовольствие и делаем каждый день ярче, создавая вкусные и качественные продукты с душой и заботой, соединяя традиции и современность.
      .company__grid-wrap 
        .company__grid(uk-grid, class="uk-child-width-1-3@s")
          +company-grid-item({title:'Возможности', text: 'Рост и развитие компании открывают возможности и перспективы для каждого сотрудника. Мы заботимся о том, чтобы каждый сотрудник мог самореализовываться и профессионально расти.'})
          +company-grid-item({title:'Партнерство', text: 'Взаимовыгодное сотрудничество – залог достижения цели. Мы поддерживаем это доверием, уважением и признанием ценности партнера и его мнения.'})
          +company-grid-item({title:'Качество', text: 'Рост и развитие компании открывают возможности и перспективы для каждого сотрудника. Мы заботимся о том, чтобы каждый сотрудник мог самореализовываться и профессионально расти.'})
          +company-grid-item({title:'Ответственность', text: 'Рост и развитие компании открывают возможности и перспективы для каждого сотрудника. Мы заботимся о том, чтобы каждый сотрудник мог самореализовываться и профессионально расти.'})
          +company-grid-item({title:'Эффективность', text: 'Рост и развитие компании открывают возможности и перспективы для каждого сотрудника. Мы заботимся о том, чтобы каждый сотрудник мог самореализовываться и профессионально расти.'})
          +company-grid-item({title:'Команда', text: 'Рост и развитие компании открывают возможности и перспективы для каждого сотрудника. Мы заботимся о том, чтобы каждый сотрудник мог самореализовываться и профессионально расти.'})

    .content__section
      .content__section-subtitle О производстве напитков
      .content__section-title На предприятии постоянно действует собственная лаборатория, отвечающая за качество продукции.
      .content__lead В распоряжении опытных специалистов, прошедших обязательную подготовку, самое современное оборудование. Регулярно проводится контроль воды и напитков, это гарантирует постоянство качества лимонадов и минеральной воды «Сарова».
      .content__video
        +video({media:'https://yootheme.com/site/images/media/yootheme-pro.mp4', class:'content__video-item'})
      .content__text Мы производим все популярные форматы напитков: стекло, ПЭТ. Высокотехнологичные современные линии работают с учетом самых высоких требований контроля качества к изготовлению продукции. Мы добываем воду из собственных артезианских скважин, и владеем собственной технологией переработки растительного сырья для изготовления ингредиентов, составляющих основу наших напитков.