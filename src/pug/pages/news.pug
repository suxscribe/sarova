extends ../layout/main

block variables
  - var title = 'Sarova';
  - var description = 'Description';
  - var pageClass = 'page--news';
  - var mainClass = 'main--content';
  - var scrollSpy = 'cls: uk-animation-slide-bottom-small; delay: 200'

block content
  .content__title-wrap.content__title-wrap--news(uk-scrollspy=scrollSpy)
    .content__subtitle(uk-scrollspy="cls: uk-animation-slide-bottom-small; delay: 400") Новости
    .content__title(uk-scrollspy="cls: uk-animation-slide-bottom-small; delay: 400") Новости компании

  .news__container#content(uk-scrollspy="cls: uk-animation-slide-bottom-small; delay: 800")
    .news__nav(uk-scrollspy="cls: uk-animation-slide-bottom-small; delay: 600")
      a.news__nav-item.uk-active() Все годы по порядку
      a.news__nav-item(href="#news-2020") 2020
      a.news__nav-item(href="#news-2019") 2019
      a.news__nav-item(href="#news-2018") 2018
      a.news__nav-item(href="#news-2017") 2017
    .news
      .news__section
        .news__section-title#news-2020 2020
        .news__section-items(uk-grid, class="uk-child-width-1-2@s")
          +news-item({number: '201130', day: '30', month: 'ноября', year: '2020', title: 'ФУТБОЛ ФК НН Нижний новгород ', desc: 'САРОВА официальный партнер Нижегородского футбольного клуба', text: 'САРОВА стала официальным партнером Нижегородского футбольного клуба. Теперь вся команда на тренировках имеет возможность пить воду САРОВА! ', image: 'news-modal-01.jpg'})
